<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <ImageView
        android:id="@+id/hero_portrait"
        android:layout_width="145dp"
        android:layout_height="218dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/taka_portrait" />

    <TextView
        android:id="@+id/hero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Fortress"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/hero_portrait"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hero_attack_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hero_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Melee"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/hero_portrait"
        app:layout_constraintTop_toBottomOf="@+id/hero_name" />

    <TextView
        android:id="@+id/hero_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hero_attack_type"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Captain"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/hero_portrait"
        app:layout_constraintTop_toBottomOf="@+id/hero_attack_type" />

    <TextView
        android:id="@+id/hero_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hero_position"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Initiator"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/hero_portrait"
        app:layout_constraintTop_toBottomOf="@+id/hero_position" />

    <TextView
        android:id="@+id/hero_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:paddingHorizontal="8dp"
        android:text="wir gwrgw grgr wgrw gwgr wgrg wg wgr wg wgr wg rwgw g gw"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hero_portrait" />
</androidx.constraintlayout.widget.ConstraintLayout>